<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vanson.dev.instagramclone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InstagramClone">
        <activity android:name=".Controllers.RegisterActivity"></activity>
        <activity android:name=".Controllers.EditProfileActivity" />
        <activity android:name=".Controllers.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.LikesActivity" />
        <activity android:name=".Controllers.ShareActivity" />
        <activity android:name=".Controllers.SearchActivity" />
        <activity android:name=".Controllers.ProfileActivity" />
        <activity
            android:name=".Controllers.LoginActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
    </application>

</manifest>