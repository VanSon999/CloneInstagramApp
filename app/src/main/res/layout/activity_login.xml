<?xml version="1.0" encoding="utf-8"?>
<vanson.dev.instagramclone.views.KeyboardAwareScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.LoginActivity"
    android:id="@+id/scroll_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/instagram_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/instagram_logo"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/description_image" />

        <EditText
            android:id="@+id/email_login"
            style="@style/big_input"
            android:layout_marginTop="40dp"
            android:hint="@string/email_"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/instagram_image"
            tools:ignore="MissingConstraints"
            android:autofillHints="" />

        <EditText
            android:id="@+id/password_login"
            style="@style/big_input"
            android:hint="@string/password"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/email_login"
            tools:ignore="MissingConstraints"
            android:autofillHints="" />

        <Button
            android:id="@+id/login_btn"
            style="@style/big_btn"
            android:text="@string/log_in"
            app:layout_constraintTop_toBottomOf="@id/password_login"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/create_account_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@drawable/top_border_grey"
            android:gravity="center"
            android:text="@string/create_account"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</vanson.dev.instagramclone.views.KeyboardAwareScrollView>

